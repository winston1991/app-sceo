<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_1"
    app:cardElevation="@dimen/margin_1"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5">

        <TextView
            android:id="@+id/item_stoqc_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""/>

        <LinearLayout
            android:id="@+id/item_stoqc_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_stoqc_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_stoqc_site"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="仓库：3000"/>

            <TextView
                android:id="@+id/item_stoqc_oh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/item_stoqc_o"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="储位：200"/>

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/item_stoqc_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_stoqc_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_below="@+id/item_stoqc_layout2"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_stoqc_lot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="批次：20012456676666677"/>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_stoqc_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_stoqc_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_below="@+id/item_stoqc_layout3"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_stoqc_avail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="库存：200"/>

            <TextView
                android:id="@+id/item_stoqc_pick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="捡料量：200"/>

            <TextView
                android:id="@+id/item_stoqc_frezz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="冻结量：200"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>