<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_wizard_two_bg" >
    
    <TextView 
        android:id="@+id/wizard_two_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_36"
        android:textColor="#FF9117"
        android:textSize="@dimen/margin_30"
        android:text="移动办公  高效便利"/>

    <ImageView 
        android:id="@+id/wizard_two_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_200"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_wizard_two_img"/>
    
    <ImageView 
        android:id="@+id/wizard_two_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_130"
        android:layout_marginLeft="@dimen/margin_48"
        android:src="@drawable/ic_wizard_two_img1"/>
    
    <ImageView 
        android:id="@+id/wizard_two_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_230"
        android:layout_marginRight="@dimen/margin_16"
        android:src="@drawable/ic_wizard_two_img2"/>
    
    <ImageView 
        android:id="@+id/wizard_two_iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_below="@+id/wizard_two_iv"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ic_wizard_two_img3"/>
    
    <ImageView 
        android:id="@+id/wizard_two_iv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wizard_two_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_8"
        android:src="@drawable/ic_wizard_two_img4"/>
    
    <ImageView 
        android:id="@+id/wizard_two_iv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_120"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_below="@+id/wizard_two_iv"
        android:src="@drawable/ic_wizard_two_img5"/>
    
    <Button 
        android:id="@+id/wizard_two_btn"
        android:layout_width="@dimen/margin_160"
        android:layout_height="@dimen/margin_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="立即体验"
        android:textSize="@dimen/margin_23"
        android:textColor="@color/title_color"
        android:layout_marginBottom="@dimen/margin_52"
        android:background="@drawable/wizard_two_btn"/>
    
</RelativeLayout>