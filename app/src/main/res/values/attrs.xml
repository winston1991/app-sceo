<?xml version="1.0" encoding="utf-8"?>
<resources >
    
    <!-- 底部tabbar -->
    <declare-styleable name="FootNavigationView">
		<attr name="books_src" format="reference|integer"></attr>
		<attr name="books_bg" format="reference|integer"></attr>
		<attr name="books_text_color" format="reference|integer"></attr> 
		
		<attr name="affairs_src" format="reference|integer"></attr>
		<attr name="affairs_bg" format="reference|integer"></attr>
		<attr name="affairs_text_color" format="reference|integer"></attr> 
		
		<attr name="linkman_src" format="reference|integer"></attr>
		<attr name="linkman_bg" format="reference|integer"></attr>
		<attr name="linkman_text_color" format="reference|integer"></attr> 
		
		<attr name="me_src" format="reference|integer"></attr>
		<attr name="me_bg" format="reference|integer"></attr>
		<attr name="me_text_color" format="reference|integer"></attr> 
    </declare-styleable>
    
    <!-- 圆形按钮属性 -->
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
        <attr name="pic_cor_mode" format="integer">
            <enum name="circle" value="0" />
            <enum name="roundcorner" value="1" />
            <enum name="normal" value="2" />
        </attr>
        <attr name="edge" format="dimension"></attr>
    </declare-styleable>
    
    <!-- 一般标题栏 -->
    <declare-styleable name="CommonTitle">
        <attr name="common_txt_left" format="color"/>
        <attr name="common_txt_middle" format="reference|color"/>
        <attr name="common_txt_right" format="color"/>
    </declare-styleable>
    
    <!-- 主标题栏 -->
    <declare-styleable name="MainTitle">
        <attr name="main_title_txt" format="reference|color"/>
    </declare-styleable>
    
    <!-- 带返回的标题栏 -->
    <declare-styleable name="BackTitle">
        <attr name="back_title_txt" format="reference|color"/>
    </declare-styleable>
    
    <!-- sportDialog -->
    <declare-styleable name="SpotsDialogStyle">
        <attr name="sd_style" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="Dialog">
        <attr name="DialogTitleAppearance" format="reference" />
        <attr name="DialogTitleText" format="reference|string" />
        <attr name="DialogTitleColor" format="color"/>
        <attr name="isShowDialogTitle" format="boolean"/>
        <attr name="DialogSpotColor" format="reference|color"/>
        <attr name="DialogSpotCount" format="integer"/>
        <attr name="DialogBackgroundColor" format="color"/>
    </declare-styleable>
    
    <!-- sweetAlertDialog -->
    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0"/>
            <enum name="y" value="1"/>
            <enum name="z" value="2"/>
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction"/>
        <attr name="pivotY" format="fraction" />
    </declare-styleable>
    
    <!-- 滑动按钮 -->
    <declare-styleable name="SwitchButton">
        <attr name="frameDrawable" format="reference|color" />
        <attr name="stateDrawable" format="reference|color" />
        <attr name="stateMaskDrawable" format="reference|color" />
        <attr name="sliderDrawable" format="reference|color" />
        <attr name="withTextInterval" format="dimension" />
    </declare-styleable>
    
    <!-- 错误视图 -->
    <declare-styleable name="ErrorViewStyle">
        <attr name="ev_style" format="reference" />
    </declare-styleable>

    <declare-styleable name="ErrorView">
        <attr name="ev_title" format="string" />
        <attr name="ev_titleColor" format="color" />
        <attr name="ev_subtitle" format="string" />
        <attr name="ev_subtitleColor" format="color" />
        <attr name="ev_errorImage" format="reference" />
        <attr name="ev_showTitle" format="boolean" />
        <attr name="ev_showSubtitle" format="boolean" />
        <attr name="ev_showRetryButton" format="boolean" />
        <attr name="ev_retryButtonText" format="string" />
        <attr name="ev_retryButtonBackground" format="reference" />
        <attr name="ev_retryButtonTextColor" format="color" />
        <attr name="ev_subtitleAlignment" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="RotateTextView">
        <attr name="degree" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="CropImageView">
        <attr name="imgSrc" format="reference" />
        <attr name="cropMode">
            <enum name="ratio_fit_image" value="0"/>
            <enum name="ratio_4_3" value="1"/>
            <enum name="ratio_3_4" value="2"/>
            <enum name="ratio_1_1" value="3"/>
            <enum name="ratio_16_9" value="4"/>
            <enum name="ratio_9_16" value="5"/>
            <enum name="ratio_free" value="6"/>
            <enum name="ratio_custom" value="7"/>
            <enum name="circle" value="8"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
        <attr name="overlayColor" format="color"/>
        <attr name="frameColor" format="color"/>
        <attr name="handleColor" format="color"/>
        <attr name="guideColor" format="color"/>
        <attr name="guideShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleShowMode">
            <enum name="show_always" value="1"/>
            <enum name="show_on_touch" value="2"/>
            <enum name="not_show" value="3"/>
        </attr>
        <attr name="handleSize" format="dimension"/>
        <attr name="touchPadding" format="dimension"/>
        <attr name="minFrameSize" format="dimension"/>
        <attr name="frameStrokeWeight" format="dimension"/>
        <attr name="guideStrokeWeight" format="dimension"/>
        <attr name="cropEnabled" format="boolean"/>
        <attr name="initialFrameScale" format="float"/>
    </declare-styleable>
    
</resources>