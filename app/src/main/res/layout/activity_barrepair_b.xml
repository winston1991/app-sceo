<?xml version="1.0" encoding="utf-8"?>
<com.huntkey.software.sceo.widget.RelativeLayoutAutoHintInputMethod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/barrepair_b_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_below="@+id/barrepair_b_toolbar">

        <LinearLayout
            android:id="@+id/barrepair_b_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_23"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:textSize="@dimen/textsize_16"
                android:text="原条码"/>

            <TextView
                android:id="@+id/barrepair_b_sn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_16"
                android:text="00000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barrepair_b_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/barrepair_b_layout1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:textSize="@dimen/textsize_16"
                android:text="原数量"/>

            <TextView
                android:id="@+id/barrepair_b_oldnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_16"
                android:text="00000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barrepair_b_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/barrepair_b_layout2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:textSize="@dimen/textsize_16"
                android:text="新数量"/>

            <com.huntkey.software.sceo.widget.ClearEditText
                android:id="@+id/barrepair_b_newnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="@dimen/margin_7"
                android:background="@drawable/border_empty"
                android:padding="@dimen/margin_10"
                android:inputType="numberDecimal"
                android:hint="输入新数量"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/text_color_normal" />

        </LinearLayout>

        <Button
            android:id="@+id/barrepair_b_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_below="@+id/barrepair_b_layout3"
            android:background="@drawable/login_btn"
            android:text="加入打印队列"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"/>

        <Button
            android:id="@+id/barrepair_b_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/barrepair_b_btn"
            android:background="@drawable/login_btn"
            android:text="关闭"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"/>

    </RelativeLayout>

</com.huntkey.software.sceo.widget.RelativeLayoutAutoHintInputMethod>