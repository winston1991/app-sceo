<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/background_color" >
    
    <com.huntkey.software.sceo.widget.BackTitle
        android:id="@+id/find_pwd2_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"/>
    
    <RelativeLayout 
        android:id="@+id/find_pwd2_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_pwd2_title"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_23"
        android:background="@drawable/border_corners">
        
        <com.huntkey.software.sceo.widget.ClearEditText
	        android:id="@+id/find_pwd2_check"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:password="true"
	        android:padding="@dimen/margin_10"
	        android:background="@null"
	        android:hint="请输入新密码"
	        android:singleLine="true"
	        android:textColor="@color/text_color_normal"
	        android:textSize="@dimen/textsize_16"/>
        
        <View 
            android:id="@+id/find_pwd2_line1"
            style="@style/devide_line_horizontal"
            android:layout_below="@+id/find_pwd2_check"/>
        
        <com.huntkey.software.sceo.widget.ClearEditText
	        android:id="@+id/find_pwd2_confirm"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:password="true"
	        android:layout_below="@+id/find_pwd2_line1"
	        android:padding="@dimen/margin_10"
	        android:background="@null"
	        android:hint="请再次输入密码"
	        android:singleLine="true"
	        android:textColor="@color/text_color_normal"
	        android:textSize="@dimen/textsize_16"/>
        
    </RelativeLayout>
    
    <Button 
        android:id="@+id/pwd_find2_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_23"
        android:layout_below="@+id/find_pwd2_layout1"
        android:background="@drawable/login_btn"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_18"/>

</RelativeLayout>