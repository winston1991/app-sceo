<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_1"
    app:cardElevation="@dimen/margin_1"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_onss_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5">

        <CheckBox
            android:id="@+id/item_onss_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_onss_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_onss_cb"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/item_onss_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_onss_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_onss_part"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="料号：3000"/>

            <TextView
                android:id="@+id/item_onss_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_toRightOf="@+id/item_onss_o"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="本次发料量：500"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_onss_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_onss_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_below="@+id/item_onss_layout2"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_onss_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="出库仓：3000"/>

            <TextView
                android:id="@+id/item_onss_qtyo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="出库量：3000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_onss_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_onss_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_below="@+id/item_onss_layout1"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_onss_lot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="批次：3000"/>

            <TextView
                android:id="@+id/item_onss_ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="储位：3000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_onss_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_discard_gray"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>