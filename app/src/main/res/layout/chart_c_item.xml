<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selector_w2g" >
        
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="@dimen/margin_5"
    	android:paddingTop="@dimen/margin_10"
		android:paddingBottom="@dimen/margin_10">
        
        <ImageView 
	       android:id="@+id/chartC_item_iv"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_centerVertical="true"
	       android:src="@drawable/ic_hassub"
	       android:visibility="visible"/>
        
        <TextView 
	       android:id="@+id/chartC_item_depart"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_toRightOf="@+id/chartC_item_iv"
	       android:textSize="@dimen/margin_14"
	       android:textColor="@color/text_color_normal"
	       android:text="嘉源锐信"/>
        
    </RelativeLayout>
        
    <View 
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/background_color"/>
    
    <TextView 
        android:id="@+id/chartC_item_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingRight="@dimen/margin_2"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/margin_14"
        android:text="昨日"/>
    
    <View 
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/chartC_item_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingRight="@dimen/margin_2"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/margin_14"
        android:text="当周"
        android:visibility="gone"/>
    
    <View 
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/background_color"/>
    
    <TextView 
        android:id="@+id/chartC_item_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingRight="@dimen/margin_2"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/margin_14"
        android:text="当月"/>
    
    <View 
        android:layout_width="@dimen/margin_0.5"
        android:layout_height="match_parent"
        android:background="@color/background_color"/>
    
    <TextView 
        android:id="@+id/chartC_item_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingRight="@dimen/margin_2"
        android:layout_gravity="center"
        android:gravity="right"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/margin_14"
        android:text="财年"/>
    
</LinearLayout>