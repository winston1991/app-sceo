<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/depart_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector_w2g" >
    
	<ImageView 
	    android:id="@+id/depart_item_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/margin_10"
	    android:layout_centerVertical="true"
	    android:src="@drawable/tree_view_icon_close"/>
	
	<ImageView 
	    android:id="@+id/depart_item_photo"
	    android:layout_width="@dimen/margin_40"
	    android:layout_height="@dimen/margin_40"
	    android:layout_marginTop="@dimen/margin_5"
	    android:layout_marginBottom="@dimen/margin_5"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/depart_item_icon"
	    android:layout_marginLeft="@dimen/margin_10"
	    android:src="@drawable/ic_department"
	    android:visibility="gone"/>
	
	<TextView 
	    android:id="@+id/depart_item_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/margin_10"
	    android:layout_marginBottom="@dimen/margin_10"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/depart_item_photo"
	    android:layout_marginLeft="@dimen/margin_3"
	    android:textSize="@dimen/margin_16"
	    android:textColor="@color/text_color_normal"
        android:text="嘉源锐信"/>
	
	<CheckBox 
        android:id="@+id/depart_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_alignParentRight="true"
        style="@style/ChooseSigleboxTheme"/>
    
</RelativeLayout>
