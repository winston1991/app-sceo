<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.huntkey.software.sceo.widget.bottomtab.BottomTabLayout
        android:id="@+id/sh_bootom_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_54"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_tab"/>

    <View
        android:id="@+id/sh_line"
        android:layout_above="@+id/sh_bootom_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/devide_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/sh_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sh_line"/>

</RelativeLayout>