<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View 
        android:id="@+id/invoiceFlow_item_line"
        android:layout_width="@dimen/margin_1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_26"
        android:background="@color/gray_btn_bg_pressed_color"/>
    
    <View 
        android:id="@+id/invoiceFlow_item_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"/>
    
    <TextView 
        android:id="@+id/invoiceFlow_item_article"
        android:layout_width="@dimen/margin_29"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_below="@+id/invoiceFlow_item_space"
        android:padding="@dimen/margin_6"
        android:textSize="@dimen/margin_14"
        android:textColor="@color/white"
        android:text="申请 1"
        android:background="@drawable/border_corners_blue"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invoiceFlow_item_space"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_toRightOf="@+id/invoiceFlow_item_article">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_12"
            android:background="@drawable/ic_chatfrom_bg_normal">
            
            <RelativeLayout 
                android:id="@+id/invoiceFlow_item_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView 
	                android:id="@+id/invoiceFlow_item_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="@dimen/margin_16"
	                android:textColor="@color/text_color_normal"
	                android:text="申请：符东宁"/>
            
	            <ImageView 
	                android:id="@+id/invoiceFlow_item_way"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/margin_3"
	                android:layout_centerVertical="true"
	                android:layout_toRightOf="@+id/invoiceFlow_item_name"
	                android:src="@drawable/ic_invoice_flow_mobile"/>
	            
	            <TextView 
	                android:id="@+id/invoiceFlow_item_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:textColor="@color/text_color_weak"
	                android:textSize="@dimen/margin_12"
	                android:text="2015-12-15 09:02"/>
	            
            </RelativeLayout>
            
            <TextView 
                android:id="@+id/invoiceFlow_item_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_below="@+id/invoiceFlow_item_layout1"
                android:textColor="@color/text_color_weak"
                android:textSize="@dimen/margin_14"
                android:text="角色"
                android:visibility="gone"/>
            
            <TextView 
                android:id="@+id/invoiceFlow_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7"
                android:layout_below="@+id/invoiceFlow_item_role"
                android:textColor="@color/text_color_weak"
                android:textSize="@dimen/margin_14"
                android:text="审核描述"/>
            
        </RelativeLayout>
        
        <com.huntkey.software.sceo.widget.RotateTextView 
	        android:id="@+id/invoiceFlow_item_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/margin_3"
	        android:layout_centerHorizontal="true"
	        app:degree="-15dp"
	        android:textColor="@color/text_color_normal"
			android:textSize="@dimen/margin_14"
			android:text="被通过"/>
        
    </RelativeLayout>
    
</RelativeLayout>
