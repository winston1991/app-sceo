<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sort_item_catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_color"
        android:textColor="#858585"
        android:paddingLeft="@dimen/margin_16"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:textSize="@dimen/margin_15"
        android:text="A"/>

    <RelativeLayout 
        android:id="@+id/sort_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_23"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:background="@drawable/bg_selector_w2g">
        
        <ImageView 
            android:id="@+id/sort_item_photo"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:scaleType="fitXY"
            android:src="@drawable/ic_login_photo"/>
        
        <TextView 
            android:id="@+id/sort_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sort_item_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:textSize="@dimen/margin_16"
            android:textColor="@color/text_color_normal"
            android:text="阿梁"/>
        
        <ImageView 
            android:id="@+id/sort_item_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_sms"/>
        
        <ImageView 
            android:id="@+id/sort_item_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sort_item_sms"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_phone"/>
        
    </RelativeLayout>

</LinearLayout>
