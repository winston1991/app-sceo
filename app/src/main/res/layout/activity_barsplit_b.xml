<?xml version="1.0" encoding="utf-8"?>
<com.huntkey.software.sceo.widget.RelativeLayoutAutoHintInputMethod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bsb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bsb_toolbar"
        android:layout_margin="@dimen/margin_16">

        <LinearLayout
            android:id="@+id/bsb_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:text="原条码："/>

            <TextView
                android:id="@+id/bsb_oldlot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/text_color_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsb_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsb_layout1"
            android:layout_marginTop="@dimen/margin_16"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:text="原数量："/>

            <TextView
                android:id="@+id/bsb_oldnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/text_color_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsb_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/bsb_layout2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:text="新数量一："/>

            <com.huntkey.software.sceo.widget.ClearEditText
                android:id="@+id/bsb_newnum1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:background="@drawable/border_empty"
                android:padding="@dimen/margin_7"
                android:hint="输入数量"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/text_color_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bsb_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/bsb_layout3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/main_bottom_tab_textcolor_normal"
                android:text="新数量二："/>

            <TextView
                android:id="@+id/bsb_newnum2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/text_color_normal" />

        </LinearLayout>

        <Button
            android:id="@+id/bsb_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/bsb_layout4"
            android:background="@drawable/login_btn"
            android:text="提交"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"/>

        <Button
            android:id="@+id/bsb_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/bsb_submit"
            android:background="@drawable/login_btn"
            android:text="取消拆分"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"/>

    </RelativeLayout>

</com.huntkey.software.sceo.widget.RelativeLayoutAutoHintInputMethod>