<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_1"
    app:cardElevation="@dimen/margin_1"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_opos_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5">

        <TextView
            android:id="@+id/item_opos_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1"/>

        <LinearLayout
            android:id="@+id/item_opos_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_opos_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_opos_part"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="料号：3000"/>

            <TextView
                android:id="@+id/item_opos_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/item_opos_o"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="仓库：500"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_opos_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_opos_o"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_below="@+id/item_opos_layout2"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_opos_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="需求量：3000"/>

            <TextView
                android:id="@+id/item_opos_pick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/textsize_13"
                android:text="本次发料量：3000"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>