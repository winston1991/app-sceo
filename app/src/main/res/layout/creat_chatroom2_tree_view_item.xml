<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cs_tree_view_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    
    <ImageView 
        android:id="@+id/cs_tree_view_item_photo"
        android:layout_width="@dimen/margin_48"
        android:layout_height="@dimen/margin_48"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:src="@drawable/ic_login_photo"/>
    
    <TextView 
        android:id="@+id/cs_tree_view_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cs_tree_view_item_photo"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/margin_16"
        android:textColor="@color/text_color_normal"
        android:text="嘉源锐信"/>
    
    <ImageView 
        android:id="@+id/cs_tree_view_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    
    <CheckBox 
        android:id="@+id/cs_tree_view_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_alignParentRight="true"
        style="@style/ChooseCheckboxTheme"/>

</RelativeLayout>