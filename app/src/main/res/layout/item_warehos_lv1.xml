<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/margin_1"
    android:paddingLeft="@dimen/margin_40"
    android:paddingRight="@dimen/margin_7"
    android:paddingTop="@dimen/margin_5"
    android:paddingBottom="@dimen/margin_5">

    <TextView
        android:id="@+id/item_whos_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1.1"/>

    <TextView
        android:id="@+id/item_whos_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_whos_num"
        android:layout_marginLeft="@dimen/margin_5"
        android:textColor="@color/text_color_normal"
        android:text="批号： 1631 1000 0001"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_whos_num"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_below="@+id/item_whos_sn"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_whos_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/text_color_normal"
            android:text="数量："/>

        <TextView
            android:id="@+id/item_whos_storage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@color/text_color_normal"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_whos_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_discard_gray"/>

</RelativeLayout>